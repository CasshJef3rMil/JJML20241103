@model IEnumerable<JJML20241103.Models.Empleado>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <!-- Botón para crear un nuevo empleado con clase btn btn-primary de Bootstrap -->
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<div class="table-responsive">
    <!-- Tabla con diseño de Bootstrap: tabla rayada y con colores suaves -->
    <table class="table table-striped">
        <thead>
            <tr>
                <!-- Encabezados de la tabla -->
                <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                <th>@Html.DisplayNameFor(model => model.Apellido)</th>
                <th>@Html.DisplayNameFor(model => model.Edad)</th>
                <th>@Html.DisplayNameFor(model => model.Cargo)</th>
                <th>@Html.DisplayNameFor(model => model.FechaContratacion)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <!-- Datos del empleado -->
                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Apellido)</td>
                    <td>@Html.DisplayFor(modelItem => item.Edad)</td>
                    <td>@Html.DisplayFor(modelItem => item.Cargo)</td>
                    <td>@Html.DisplayFor(modelItem => item.FechaContratacion)</td>
                    <td>
                        <!-- Botones de acción con clases btn btn-sm y colores de Bootstrap -->
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
